FROM node:22-slim

ENV NODE_ENV=production
WORKDIR /app

RUN apt-get update \
  && apt-get install -y --no-install-recommends libvips42 python3 build-essential make g++ ffmpeg \
  && rm -rf /var/lib/apt/lists/*

COPY server/package.json server/package-lock.json ./
RUN npm install --omit=dev

COPY server ./server
WORKDIR /app/server

EXPOSE 8080
CMD ["node", "src/server.js"]
